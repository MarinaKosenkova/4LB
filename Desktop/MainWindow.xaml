    </Window.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="723*"/>
        </Grid.ColumnDefinitions>


        <Label Content="Почта"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="323,147,0,0" Grid.Column="1" />
        <TextBox x:Name="txtUsername"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="323,197,0,0"
                 Width="200"
                 BorderBrush="#FF807A7A"
                 Height="1"
                 TextChanged="txtUsername_TextChanged"
                 Background="Black"
                 FontSize="20" Grid.Column="1" />

        <Label Content="Пароль"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="323,211,0,0"
               RenderTransformOrigin="0.333,0.45" Grid.Column="1" />
        <PasswordBox Style="{DynamicResource PasswordBoxStyle1}"
                     x:Name="txtPassword"
                     PasswordChar="*"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="323,273,0,0"
                     Width="200"
                     Background="Black"
                     Height="1"
                     BorderBrush="#FF807A7A"
                     FontSize="20" Grid.Column="1" />

        <Button Style="{DynamicResource ButtonStyle4}"
                Content="Войти"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="323,321,0,0"
                Width="200"
                Click="RegisterButton_Click" Height="30"
                Background="#FFEC7171"
                RenderTransformOrigin="1,0"
                BorderBrush="#FFFDFDFD"
                Foreground="White" Grid.Column="1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{DynamicResource ButtonStyle2}"
                Content="Регистрация"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="323,363,0,0"
                Width="200"
               
                Background="#FFEC7171"
                BorderBrush="White"
                Foreground="White" 
                Click="OpenRegistration_Click" Grid.Column="1" Height="30"/>

        <Image HorizontalAlignment="Left"
               Height="166"
               Margin="59,32,0,0"
               VerticalAlignment="Top"
               Width="171"
               Source="/Рисунок1.png" Grid.ColumnSpan="2" />
        <Label Content="Восстановить пароль"
               HorizontalAlignment="Left"
               Height="42"
               Margin="449,279,0,0"
               VerticalAlignment="Top"
               Width="137" Grid.Column="1" />
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="323,250,0,0"
                 TextWrapping="Wrap" Text="введите пароль" VerticalAlignment="Top" Width="194"
                 BorderBrush="White" Background="{x:Null}" Foreground="#FF736C6C"
                 MouseEnter="PasswordTextBox_MouseEnter" MouseLeave="PasswordTextBox_MouseLeave"
                GotFocus="PasswordTextBox_GotFocus" LostFocus="PasswordTextBox_LostFocus" AutomationProperties.IsOffscreenBehavior="Offscreen" Grid.Column="1" TextChanged="passwordTextBox_TextChanged"/>
        
   <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Margin="323,173,0,0"
  TextWrapping="Wrap" Text="exam@yandex.ru" VerticalAlignment="Top" Width="194"
  BorderBrush="White" Background="{x:Null}" Foreground="#FF736C6C"
  MouseEnter="PasswordTextBox_MouseEnter" MouseLeave="PasswordTextBox_MouseLeave"
 GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus" AutomationProperties.IsOffscreenBehavior="Offscreen" Grid.Column="1"/>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="323,74,0,0" VerticalAlignment="Top" FontSize="26" Grid.Column="1"/>

    </Grid>
</Window>
